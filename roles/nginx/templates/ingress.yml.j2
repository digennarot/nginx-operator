---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{ ansible_operator_meta.name }}"
  namespace: "{{ ansible_operator_meta.namespace }}"
#  annotations:
#    "{{ ingress_annotations | default(INGRESS_ANNOTATIONS) }}"
spec:
  rules:
  - http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: "{{ ansible_operator_meta.name }}"
            port:
              number: 80