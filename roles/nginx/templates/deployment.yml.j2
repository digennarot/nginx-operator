apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: "{{ ansible_operator_meta.name }}"
  name: "{{ ansible_operator_meta.name }}"
  namespace: "{{ ansible_operator_meta.namespace }}"
spec:
  replicas: {{ size | int }}
  selector:
    matchLabels:
      app: "{{ ansible_operator_meta.name }}"
  strategy: {}
  template:
    metadata:
      labels:
        app: "{{ ansible_operator_meta.name }}"
    spec:
      containers:
        - name: ngnix
          image: "{{ image | default(IMAGE) }}"
          imagePullPolicy: "{{ image_pull_policy | default(IMAGE_PULL_POLICY) }}"
          imagePullSecrets:
            - name: regcred
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          volumeMounts:
            - name: nginx-config
              mountPath: /etc/nginx/nginx.conf
              subPath: nginx.conf
              readOnly: true
      volumes:
        - name: nginx-config
          configMap:
            name: nginx-config-file