---
apiVersion: v1
kind: Service
metadata:
  name: "{{ ansible_operator_meta.name }}"
  namespace: "{{ nginx_namespace }}"
  labels:
    app: "{{ ansible_operator_meta.name }}"
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: "http"
  selector:
    app: "{{ ansible_operator_meta.name }}"